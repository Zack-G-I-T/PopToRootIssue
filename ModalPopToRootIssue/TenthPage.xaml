<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="ModalPopToRootIssue.TenthPage"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    Background="Orange"
    Shell.PresentationMode="Modal">

    <ScrollView>
        <VerticalStackLayout Padding="30,0" Spacing="25">

            <Label Style="{StaticResource SubHeadline}" Text="Tenth Page" />

            <Button Clicked="PopAnimation" Text="GO TO ROOT" />

            <Button Clicked="PopNoAnimation" Text="GO TO ROOT (No Animation)" />

            <Label Text="This option is quicker, but you still see the flashes of all the previous pages. Is there a way to stop this but still use modal?" />
        </VerticalStackLayout>
    </ScrollView>

</ContentPage>
